<%- include ("../partials/header")%>

<h1>Predmets List</h1>

<a href="/predmets/create">Create a New Predmet</a>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>lecturesize</th>
      <th>practicesize</th>
      <th>labsize</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% items.forEach(function(item) { %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.lecturesize %></td>
      <td><%= item.practicesize %></td>
      <td><%= item.labsize %></td>
      <td>
        <form
          method="GET"
          action="/predmets/edit/<%= item._id %>"
          style="display: inline"
        >
          <button type="submit">Edit</button>
        </form>
      </td>
      <td>
        <form
          method="POST"
          action="/predmets/<%= item._id %>?_method=DELETE"
          style="display: inline"
        >
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include ("../partials/footer") %>
